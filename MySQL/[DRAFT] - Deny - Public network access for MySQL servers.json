{
  "mode": "Indexed",
  "policyRule": {
    "if": {
      "allOf": [
        {
          "field": "type",
          "equals": "Microsoft.DBforMySQL/servers"
        },
        {
          "allOf": [
            {
              "field": "Microsoft.DBforMySQL/servers/publicNetworkAccess",
              "exists": true
            },
            {
              "field": "Microsoft.DBforMySQL/servers/publicNetworkAccess",
              "notEquals": "Disabled"
            }
          ]
        } 
      ]
    },
    "then": {
      "effect": "[parameters('effect')]"
    }
  },
  "parameters": {
    "effect": {
      "type": "String",
      "metadata": {
        "displayName": "Effect",
        "description": "Enable or disable the execution of the policy"
      },
      "allowedValues": [
        "Audit",
        "Deny",
        "Disabled"
      ],
      "defaultValue": "Deny"
    }
  }
}